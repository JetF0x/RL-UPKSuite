<Window x:Class="Decryptor.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:behaviors="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:viewModel="clr-namespace:Decryptor.Wpf.MVVM.ViewModel"
        xmlns:system="clr-namespace:System;assembly=System.Runtime"
        xmlns:converters="clr-namespace:Decryptor.Wpf.Converters"
        mc:Ignorable="d"
        Title="RocketLeague Package Decryption" Height="300" Width="500">
    <Window.Resources>
        <converters:FileDropEventArgsConverter x:Key="FileDropEventArgsConverter" />
    </Window.Resources>
    <Window.DataContext>
        <viewModel:MainWindowViewModel />
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="75"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Button Height="20"
                Content="Select File"
                Command="{Binding OpenFileDialogCommand}"
                Margin="5" />
        <TextBlock Grid.Row="0" Grid.Column="1" Margin="10, 0,0,0" VerticalAlignment="Center" HorizontalAlignment="Left"
                   AllowDrop="True" Text="OR drop here">
            <behaviors:Interaction.Triggers>
                <behaviors:EventTrigger EventName="Drop">
                    <behaviors:InvokeCommandAction
                        Command="{Binding AddFilesCommand}"
                        EventArgsConverter="{StaticResource FileDropEventArgsConverter}" />
                </behaviors:EventTrigger>
            </behaviors:Interaction.Triggers>
        </TextBlock>
        <ListView Grid.Row="1" Grid.Column="1" ItemsSource="{Binding FilesAdded}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="FileName" Width="100" DisplayMemberBinding="{Binding FileName}"></GridViewColumn>
                    <GridViewColumn Header="FilePath" Width="200" DisplayMemberBinding="{Binding FilePath}"></GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>